<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>BookShelf</title>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css" rel="stylesheet">
</head>
<body style="background-color:#f5f5f5;font-family:Arial,Helvetica,sans-serif;">
  <nav class="blue darken-2">
    <div class="nav-wrapper container">
      <a href="#" class="brand-logo">BookShelf</a>
    </div>
  </nav>

  <div class="container" style="margin-top:40px;">
    <div class="center-align" style="margin-top:20px;">
      <h4 style="color:#1565c0;">Discover New Reads</h4>
      <a href="/chat" class="btn blue darken-2" style="margin-top:10px;">Open Chat</a>
    </div>

    <div class="row" style="margin-top:30px;">
      <% if (books && books.length > 0) { %>
        <% books.forEach(book => { %>
          <div class="col s12 m4">
            <div class="card">
              <div class="card-image">
                <img src="<%= book.image %>" alt="<%= book.title %>">
              </div>
              <div class="card-content">
                <span class="card-title" style="color:#1565c0;"><%= book.title %></span>
                <p><%= book.author %></p>
                <p>$<%= book.price.toFixed(2) %></p>
              </div>
            </div>
          </div>
        <% }) %>
      <% } else { %>
        <h6 class="center-align grey-text">No books available</h6>
      <% } %>
    </div>
  </div>

  <footer class="page-footer blue darken-2">
    <div class="container center-align">2025 BookShelf</div>
  </footer>
</body>
</html>
